script/source = "extends CanvasLayer

@export var animation_player: AnimationPlayer 
@export var upgrade_scenes: Array[PackedScene]
@export var tank_buttons: Array[Button]

func _ready():
	$Control.mouse_filter = $Control.MOUSE_FILTER_IGNORE
	for btn in tank_buttons:
		btn.disabled = true

func show_menu():
	animation_player.play(\"show\")
	$Control.mouse_filter = $Control.MOUSE_FILTER_PASS
	
	for btn in tank_buttons:
		btn.disabled = false
	
func hide_menu():
	animation_player.play(\"hide\")
	$Control.mouse_filter = $Control.MOUSE_FILTER_IGNORE
	
	for btn in tank_buttons:
		btn.disabled = true
	

func _on_color_picker_color_changed(color):
	if not Global.Game.client:
		return
	Global.Game.client.update_color(color)

func upgrade_tank(index):
	Global.Game.client.upgrade_tank(upgrade_scenes[index])
"

